body 						{ font-family: 'Roboto Condensed'; }
i 	 						{ width: 20px; text-align: center; color: rgba(151,187,205, 1); }
h3, h4, h5, h6 	{ margin: 0; font-family: 'Roboto Condensed'; color: #666; }
p 	 						{ margin: 0; font-size: 14px; }
code 						{ font-size: 14px; }
.m-top-30 			{ margin-top: 30px; }
.m-bottom-15 		{ margin-bottom: 15px; }
.shadow 				{ box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2); }
.clear 					{ clear: both; }

$panel-height: 180px;
$panel-padding: 20px;

.top-panel {
	background-color: rgba(255, 255, 255, 0.9);
	width: 100%;
	height: $panel-height;
	padding: $panel-padding;
	position: fixed;
	z-index: 5;
	.top-left-panel {
		img {
			border-radius: 5px;
		}
	}
	.top-right-panel {
		.panel-header {
			height: 20px;
			h3 {
				color: #333;
				font-size: 16px;
				font-family: 'Roboto Slab';
				text-transform: uppercase;
				line-height: 20px;
				.last-name { color: gray; }
			}
		}
		.panel-content {
			height: 80px;
			margin: 10px 0 10px 0;
			p {
				font-size: 14px;
				line-height: 20px;
				.text { margin-left: 5px; }
			}
		}
		.panel-footer {
			height: 20px;
			p {
				display: inline;
				margin-left: 5px;
				font-size: 14px;
				line-height: 20px;
				i { margin-right: -5px; }
				.text { margin-left: 5px; }
			}
			p:first-child { margin-left: 0px; }
		}
	}
}

#line-chart { margin-left: -10px; }
.chart-header { font-size: 12px; line-height:14px; margin-bottom: 4px; }
.linechart-header { margin-left: -5px; }
.barchart-header { margin-left: 10px; }

.content-panel { padding-top: 180px; }
.languages { font-size: 14px; line-height: 20px; cursor: pointer; }
.repository-wrap { margin-bottom: 20px; }
.each-imaged-repository, .each-regular-repository, .each-forked-repository {
	padding: 10px;
	background-color: rgba(255, 255, 255, 0.9);
	box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2);
	cursor: pointer;
	transition: all .4s;
	img { margin-bottom: 10px; }
	h3 { font-size: 14px; line-height: 20px; height: 20px; overflow: hidden; float: left; }
	p { font-size: 14px; line-height: 20px; height: 20px; overflow: hidden; }
	.updated {
		float: left;
		// font-size: 12px;
		// line-height: 12px;
		color: gray;
	}
	.language { float: right; vertical-align: bottom; font-size: 10px; color: lightgray; }
	.fork-icon { float: right; }
}

.title-bg {
	background-color: rgba(151,187,205, 0.2);
}

.title-bar {
	height: 90px;
	padding: 20px 0 20px 0;
	overflow: hidden;
	.show {
		padding: 0;
		margin: 0;
		text-transform: uppercase;
		small {
			margin-left: 20px;
			color: gray;
			font-size: 18px;
			text-transform: uppercase;
		}
	}
	.display-switch {
		position: relative;
		top: 15px;
		span {
			position: relative;
			top: -7px;
			right: 5px;
		}
	}
}

.repo-textarea {
	resize: none;
	height: 80px;
}

.user-header {
	text-transform: uppercase;
	font-weight: bold;
	color: #000;
	margin-bottom: 40px;
}

