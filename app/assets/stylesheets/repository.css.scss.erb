body 		{ font-family: 'Roboto Condensed'; }
i 	 		{ width: 20px; text-align: center; }
h3 	 		{ margin: 0; }
p 	 		{ margin: 0; }
.shadow { box-shadow: 0px 0px 1px rgba(0, 0, 0, 0.2); }

$panel-height: 180px;
$panel-padding: 20px;

.top-panel {
	background-color: rgba(255, 255, 255, 0.9);
	width: 100%;
	height: $panel-height;
	padding: $panel-padding;
	position: fixed;
	z-index: 5;
	.top-left-panel {
		img {
			border-radius: 5px;
		}
	}
	.top-right-panel {
		.panel-header {
			height: 20px;
			h3 {
				color: #333;
				font-size: 16px;
				font-family: 'Roboto Slab';
				text-transform: uppercase;
				line-height: 20px;
				.last-name { color: gray; }
			}
		}
		.panel-content {
			height: 80px;
			margin: 10px 0 10px 0;
			p {
				font-size: 14px;
				line-height: 20px;
				.text { margin-left: 5px; }
			}
		}
		.panel-footer {
			height: 20px;
			p {
				display: inline;
				margin-left: 5px;
				font-size: 14px;
				line-height: 20px;
				i { margin-right: -5px; }
				.text { margin-left: 5px; }
			}
			p:first-child { margin-left: 0px; }
		}
	}
}

.content-wrap {
	padding-top: 200px;
}

#line-chart {
	margin-left: -10px;
}

.chart-header {
	font-size: 12px;
	line-height:14px;
	margin-bottom: 4px;	
}
.linechart-header { margin-left: -5px; }
.barchart-header { margin-left: 10px; }