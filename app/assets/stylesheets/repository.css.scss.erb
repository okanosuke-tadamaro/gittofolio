/* ------ MAIN CONTENT ON INDEX.HTML.ERB ------ */
.main_content { margin-bottom: 50px; }

.filterControl {
	margin: 0;
	padding: 0;
}

.filterControl li {
	margin-top: 30px;
	margin-bottom: 20px;
	margin-right: 15px;
	display: inline-block;
	cursor: pointer;
	font-size: 14px;
	text-transform: uppercase;
	letter-spacing: 2px;

}

#filterGrid{
	margin: 0;
	padding: 0px;
	font-size: 0.1px;
}

#filterGrid:after{
	content: '';
	display: inline-block;
	width: 100%;
}

#filterGrid .mix{
	display: none;
	opacity: 0;
	width: 196px;
	vertical-align: top;
	margin: 10px;
	font-size: 14px;
	background-color: white;
	border: solid 2px white;
}

#filterGrid .mix a {
	text-decoration: none;
}

#filterGrid .mix h4 {
	margin: 0;
	padding-bottom: 5px;
	color: #1c1c1c;
	font-weight: 300;
	line-height: 20px;
	text-align: center;
	text-decoration: none;
}

#filterGrid .gap{
	display: inline-block;
	width: 200px;
}

.thumbalt {
	width: 196px;
	height: 147px;
	margin-bottom: 4px;
	line-height: 147px;
	text-align: center;
	text-transform: uppercase;
	font-weight: 900;
	font-size: 18px;
	color: rgba(255,255,255,0.5);
}
/* ------ END ------ */

.index_language {
	font-size: 16px;
	font-weight: 300;
	text-transform: uppercase;
	letter-spacing: 2px;
}

.repo_list {
	font-weight: 200;
	font-size: 12px;
}

.item {
	background-color: lightgray;
	width: 215px;
	margin-bottom: 10px;
	font-size: 12px;
	overflow: hidden;
}

.item img {
	height: 100px;
}

.item_description {
	height: 30px;
}

/* ------ DETAIL PAGE ------ */
.repo_name {
	padding-top: 25px;
}

.screenshot {
	margin-bottom: 25px;
}

.display_repo_content {
	background-color: rgba(0,0,0,0.2);
	padding: 25px;
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.1) inset, 0 1px 5px rgba(0, 0, 0, 0.1) inset;
}

.repo_file,
.repo_directory {
	display: inline-block;
	vertical-align: top;
	width: 86px;
	height: 86px;
	border: solid 2px white;
	margin: 7px;
	padding: 0;
	margin-bottom: 15px;
	background-color: white;
	text-align: center;
	overflow: hidden;
}

.repo_file h4,
.repo_directory h4 {
	margin: 0;
	padding: 0;
	font-size: 12px;
	color: #1c1c1c;
	line-height: 20px;
	padding-left: 5px;
	padding-right: 5px;
}

.file_box {
	height: 66px;
	line-height: 66px;
	font-size: 18px;
	font-weight: 900;
	text-transform: uppercase;
	color: rgba(255,255,255,0.5);
	height: 66px;
	background-color: lightblue;
}

.directory_box {
	height: 66px;
	line-height: 66px;
	font-size: 18px;
	font-weight: 900;
	text-transform: uppercase;
	color: rgba(255,255,255,0.5);
	background-color: darkblue;
}

.show_dirs {
	color: blue;
}

.display_readme {
	margin-top: 25px;
	padding: 25px;
	background-color: rgba(0,0,0,0.2);
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.1) inset, 0 1px 5px rgba(0, 0, 0, 0.1) inset;
}

.show_readme {
	font-size: 16px;
	font-weight: 300;
	font-family: 'Source Sans Pro';
}

.show_readme h1,
.show_readme h2,
.show_readme h3,
.show_readme h4,
.show_readme h5 {
	font-weight: 400;
	text-transform: uppercase;
	margin: 0;
}

.show_readme img {
	margin: 5px;
}

.show_readme code {
	display: block;
	padding: 15px;
	background-color: rgba(0,0,0,0.3);
	margin-top: 10px;
	margin-bottom: 10px;
}

.show_readme a {
	color: lightblue;
	text-decoration: underline;
}
/* ------ END ------ */

/* ------ FOOTER ------ */
.footer {
	background-color: rgba(255,255,255,0.3);
	border-top-left-radius: 3px;
	border-top-right-radius: 3px;
	padding: 10px;
}

.footer p {
	margin: 0;
	text-align: right;
	font-size: 14px;
}

.show_login_color {
	color: lightblue;
}
/* ------ END ------ */

/* ------ DETAIL PAGE ------ */
.repo_name {
	font-weight: 200;
	text-transform: uppercase;
	letter-spacing: 3px;
}

.show_homepage {
	-moz-transform: scale(1,1);
	-webkit-transform: scale(1,1);
	-o-transform: scale(1,1);
	-ms-transform: scale(1,1);
	overflow: hidden;
	height: 500px;
	width: 100%;
	border: solid 1px lightgray;
}

.file_name {
	font-weight: 200;
	font-size: 12px;
}

/* ------ MODAL ------ */
#lean_overlay {
    position: fixed;
    z-index:100;
    top: 0px;
    left: 0px;
    height:100%;
    width:100%;
    background: #000;
    display: none;
}

.hide_content {
	display: none;
}

.show_content {
	background-color: rgba(0,0,0,0.8);
	width: 80%;
	height: 80%;
	overflow: scroll;
}

.show_content h2 {
	margin: 0;
	padding: 0;
	font-weight: 200;
	font-size: 18px;
	text-indent: 30px;
	line-height: 60px;
	background-color: rgba(255,255,255,0.1);
	box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
}

.show_content pre {
	font-size: 14px;
	font-family: 'Source Sans Pro';
	font-weight: 300;
	padding: 30px;
}