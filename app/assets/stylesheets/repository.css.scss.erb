/*------ common styles ------*/
.top_padding { padding-top: 25px; }
.basic_box { background-color: #f9f9f9; padding: 10px; }
.shadow { box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1); }
.border_bottom { border-bottom: solid 1px lightgray; margin-bottom: 20px; }
.yield { h1, h2, h3, h4, h5, h6 { padding: 5px 5px 5px 5px; margin-bottom: 0; font-weight: 400; } }
.gray { color: gray; } .lightblue { color: lightblue; }
pre { font-family: 'Source Code Pro'; font-size: 14px; word-wrap: break-word; }

/*------ logo ------*/
.h1_user {
	.on_gittofolio { color: white; }
	.change_color { color: aqua; }
	padding-left: 15px;
	color: white;
	font-weight: 600;
	text-transform: uppercase;
	letter-spacing: 3px;
}

/*------ top section of repository#index ------*/
.user_window {
	.user_avatar{
		.avatar_box { padding: 5px; background-color: #f9f9f9; }
		.stat_box { padding: 5px; background-color: #f9f9f9; margin-top: 10px; }
	}
	.line_chart, .pie_chart { margin: 0; }
	.info_box {
		ul {
			li { display: inline-block; margin-right: 15px; }
			margin: 0; font-size: 14px; list-style-type: none;
		}
		background-color: rgba(255,255,255,0.5);
		padding: 15px;
	}
}

.profile {
	table {
		i { width: 25px; }
		td, i { margin: 0; line-height: 80%; }
		td:first-child { width: 80px; border-right: solid 1px lightgray; color: gray; }
		td:last-child { padding-left: 25px; }
		width: 100%;
		margin-top: 20px;
		margin-bottom: 30px;
		border: none;
		border-collapse: collapse;
		background: none;
	}
	.profile_pic {
		img { border-radius: 10px; box-shadow: inset 0 1px 5px rgba(0, 0, 0, 0.3); }
		width: 200px;
	}
	.info_name { border-bottom: solid 1px lightgray; margin: 0; }
	.line_chart, .pie_chart { margin: 0; }
	background-color: #f9f9f9;
	padding: 50px;
}


/*------ bottom section of repository#index ------*/
.each_repo {
	i { width: 12px; }
	img { margin-bottom: 5px; }
	p {
		.updated_at {
			i { margin-left: 1px; }
			font-size: 10px; color: gray;
		}
		line-height: 16px; font-size: 14px; font-weight: 400; margin: 0; padding: 3px;
	}
	.fork { float: right; font-size: 12px; color: gray; margin-top: 5px; }
	background-color: #f9f9f9;
	-webkit-transition:all .5s;
	padding: 5px;
}

.each_repo:hover {
	background-color: white;
}

.modal_right {
	float: right;
	font-size: 12px;
	color: gray;
	vertical-align: bottom;
	line-height: 30px;
}


/* ------ repository#detail ------ */
.breadcrumbs { margin-top: 20px; }

.file_box {
	i { width: 20px; color: lightblue; }
	margin: 0;
	font-size: 14px;
	list-style-type: none;
}

.display_readme {
	code { display: block; padding: 15px; font-family: 'Source Code Pro'; font-size: 12px; background-color: gray; color: white; }
}