 .new_content {
 	height: 300px;
 	width: 300px;
 	border-radius: 50%;
 	background-color: lightblue;
 	border: solid 2px white;
 }

 .new_content p {
 	margin: 0;
 	padding: 0;
 	text-transform: uppercase;
	line-height: 300px;
 	text-align: center;
 }


 body {
 	background: url("<%= asset_path 'bg2.png' %>");
 	background-attachment: fixed;
 }

.bodywrap {
	height: auto;
	margin-top: 60px;
	display: none;
	z-index: 0;
}

.bodywrap a { text-decoration: none; }


/* ------ HEADER ------ */
.fixed_header {
  	width: 100%;
  	height: 60px;
  	position: fixed;
  	top: 0;
  	left: 0;
  	background-color: rgba(255,255,255,0.3);
  	z-index: 1;
  	box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
}

.logo {
	margin: 0;
	padding: 0;
	font-size: 20px;
	font-weight: 700;
	text-transform: uppercase;
	letter-spacing: 5px;
	line-height: 60px;
	color: white;
	text-shadow: 1px 2px 1px rgba(0,0,0,0.3);
}

.change_color {
	color: lightblue;
}

.on_gittofolio {
	font-size: 14px;
	letter-spacing: 2px;
	margin-left: 5px;
	font-weight: 400;
	color: white;
	vertical-align: top;
	line-height: 56px;
}

.nav {
	text-align: right;
}

.nav li {
	line-height: 60px;
	display: inline;
	margin-left: 15px;
}

.nav li a {
	color: white;
	font-size: 16px;
	text-decoration: none;
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: 400;
	text-shadow: 1px 2px 1px rgba(0,0,0,0.3);
}

.nav li a:hover {
	color: lightblue;
}
/* ------ END ------ */

.user_window {
	background-color: rgba(0,0,0,0.2);
	padding-top: 70px;
	padding-bottom: 70px;
	box-shadow: 0 0 5px rgba(0, 0, 0, 0.2) inset, 0 1px 5px rgba(0, 0, 0, 0.2) inset;
}

.avatar {
	display: block;
	margin-left: auto;
	margin-right: auto;
	border-radius: 50%;
	border: solid 2px white;
}

.pie_wrap {

}

.language_pie {
	display: block;
	margin-left: auto;
	margin-right: auto;
	padding-bottom: 30px;
}

.label_wrap {
	margin: 0 auto;
}

.color_hoge {
	margin: 0;
	padding: 0;
	text-align: center;
}

.color_hoge li {
	font-size: 10px;
	line-height: 20px;
	text-align: center;
	min-width: 75px;
	margin: 0 auto;
	margin-bottom: 10px;
	color: white;
	text-transform: uppercase;
	border: solid 2px white;
	display: inline-block;
}

