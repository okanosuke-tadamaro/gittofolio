.intro {
	hr { margin: 0; padding-bottom: 25px; }
	margin-bottom: 40px;
}

.slogan {
	background: url(<%= asset_path 'logo_bg.png' %>) no-repeat;
	background-size: auto 350px;
	background-position: center;
	height: 350px;
	margin: 100px 0 100px 0;
}

.each_result {
	img {
		padding: 5px;
		border-left: solid 1px lightgray;
		border-right: solid 1px lightgray;
		border-top: solid 1px lightgray;
	}
	.each_result_text {
		p { margin: 0; line-height: 100%; font-size: 90%; }
		padding: 5px;
		border-left: solid 1px lightgray;
		border-right: solid 1px lightgray;
		border-bottom: solid 1px lightgray;
	}
}