.intro, .search {
	hr { margin: 0; padding-bottom: 25px; }
	margin-bottom: 40px;
}

.slogan {
	background: url(<%= asset_path 'logo_bg.png' %>) no-repeat;
	background-size: auto 350px;
	background-position: center;
	height: 350px;
	margin: 100px 0 100px 0;
}

.each_result, .search_box {
	img { margin-bottom: 5px; }
	p { line-height: 16px; font-size: 14px; font-weight: 400; margin: 0; padding: 3px; }
	padding: 5px;
	background-color: #f9f9f9;
}

.footer {
	ul {
		li { display: inline-block; font-size: 14px; margin-left: 10px; }
		list-style-type: none;
		margin: 0;
	}
	p { font-size: 14px; color: gray; }
}