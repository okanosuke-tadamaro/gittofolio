<div class="small-12 columns">

	<div class="row user_window">
		<div class="small-3 large-3 columns user_avatar">
			<div class="avatar_box shadow"><%= image_tag("http://www.gravatar.com/avatar/#{@repositories.first[:avatar]}?s=300", :class => "avatar") %></div>
		</div>
		<div class="small-9 large-9 columns">
			<div class="row collapse">
				<div class="small-12 columns">
					<h6><i class="fa fa-info-circle"></i>General Information</h6>
					<div class="info_box shadow">
						<ul>
							<li><i class="fa fa-map-marker"></i><%= if @location != nil then @location else "Location not available" end %></li>
							<li><i class="fa fa-building-o"></i><%= if @full_user_data.company != nil then @full_user_data.company else "Company not available" end %></li>
							<li><i class="fa fa-envelope"></i><%= if @full_user_data.email != nil then @full_user_data.email else "Email not available" end %></li>
						</ul>
						<ul>
							<li><i class="fa fa-github"></i><a href="http://www.github.com/<%= params[:user_name] %>" target="_blank">Github</a></li>
							<li><i class="fa fa-twitter"></i>Twitter</li>
							<li><i class="fa fa-facebook"></i>Facebook</li>
						</ul>
						<ul>
							<li><i class="fa fa-arrow-circle-o-down"></i><span><%= @full_user_data.followers %></span> followers</li>
							<li><i class="fa fa-arrow-circle-o-up"></i><span><%= @full_user_data.following %></span> following</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row top_padding">
				<div class="large-6 columns">
					<h6><i class="fa fa-fire"></i>Recent Activity</h6>
					<ul data-pie-id="line_chart" class="line_chart shadow">
						<%= line_chart(@line_chart, :id => "line_chart", :height => "190px", :library => {:backgroundColor => "#f9f9f9", :chartArea => {:width => "90%"}, :vAxis => {:textStyle => {:fontSize => 10}, :textPosition => "in"}, :hAxis => {:textStyle => {:fontSize => 10}, :format => 'M/d'}}) %>
					</ul>
				</div>
				<div class="large-6 columns">
					<h6><i class="fa fa-bar-chart-o"></i>Language Composition</h6>
					<ul data-pie-id="pie_chart" class="pie_chart shadow">
						<%= pie_chart(@pie_data, :id => "pie_chart", :height => "190px", :library => {:colors => @pie_colors, :backgroundColor => "#f9f9f9", :chartArea => {:width => "90%"}}) %>
					</ul>
				</div>
			</div>	
		</div>
	</div>

	<div class="row top_padding">
		<div class="small-12 columns top_padding">
			<div class="border_bottom"><h6><i class="fa fa-leaf"></i>Repositories</h6></div>
			<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-4">
				<% @repositories.each do |filter| %>
					<% if filter[:homepage] != "not_available" %>
						<li><a href="#" data-reveal-id="<%= filter[:name].gsub('.','') %>">
							<div class="each_repo shadow" style="border-right: solid 5px <%= @panel_label.select { |color| color.first == filter[:language] }.first.last %>">
								<img src="<%= "http://s.wordpress.com/mshots/v1/#{filter[:homepage].to_s}?w=300" %>">
								<% if filter[:fork] == true %><i class="fa fa-code-fork fork"></i><% end %>
								<p>
									<i class="fa fa-github"></i><%= if filter[:name].size > 26 then filter[:name][0,26] + "..." else filter[:name] end %><br />
									<span class="updated_at"><i class="fa fa-calendar"></i><%= l filter[:update_date], format: :long %></span>
								</p>
							</div>
						</a></li>
						<div id="<%= filter[:name].gsub('.','') %>" class="reveal-modal small" data-reveal>
							<p class="modal_right">Created: <%= filter[:start_date].to_s %>&nbsp;&nbsp;&nbsp;Updated: <%= filter[:update_date].to_s %></p>
							<div class="border_bottom"><h6><i class="fa fa-github"></i><%= filter[:name] %></h6></div>
							<h6 class="gray">Language:</h6>
							<blockquote><%= filter[:language] %></blockquote>
							<h6 class="gray">Description:</h6>
							<blockquote><%= filter[:description] %></blockquote>
							<a href='<%= "/#{params[:user_name]}/#{filter[:name]}" %>' class="button expand">Details</a>
							<a class="close-reveal-modal">&#215;</a>
						</div>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="row top_padding">
		<div class="small-12 columns">
			<div class="border_bottom"><h6><i class="fa fa-leaf"></i>Other Repositories</h6></div>
			<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-5">
				<% @repositories.each do |filter| %>
					<% if filter[:homepage] == "not_available" %>
						<li><a href="#" data-reveal-id="<%= filter[:name].gsub('.','') %>">
							<div class="each_repo shadow" style="border-right: solid 5px <%= @panel_label.select { |color| color.first == filter[:language] }.first.last %>">
								<% if filter[:fork] == true %><i class="fa fa-code-fork fork"></i><% end %>
								<p>
									<i class="fa fa-github"></i><%= if filter[:name].size > 15 then filter[:name][0,15] + "..." else filter[:name] end %><br />
									<span class="updated_at"><i class="fa fa-calendar"></i><%= l filter[:update_date], format: :long %></span>
								</p>
							</div>
						</a></li>
						<div id="<%= filter[:name].gsub('.','') %>" class="reveal-modal small" data-reveal>
							<p class="modal_right">Created: <%= filter[:start_date].to_s %>&nbsp;&nbsp;&nbsp;Updated: <%= filter[:update_date].to_s %></p>
							<div class="border_bottom"><h6><i class="fa fa-github"></i><%= filter[:name] %></h6></div>
							<h6 class="gray">Language:</h6>
							<blockquote><%= filter[:language] %></blockquote>
							<h6 class="gray">Description:</h6>
							<blockquote><%= filter[:description] %></blockquote>
							<a href='<%= "/#{params[:user_name]}/#{filter[:name]}" %>' class="button expand">Details</a>
							<a class="close-reveal-modal">&#215;</a>
						</div>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>

</div>