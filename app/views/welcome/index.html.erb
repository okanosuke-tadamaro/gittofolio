<%= render 'header' %>

<div class="row">
	<div class="row-content">
		
		<% if session[:github_access_token] == nil then %>
			<div class="welcome">
				<h3>Because my eyes get tired looking at Github</h3>
				<a href="https://github.com/login/oauth/authorize?client_id=<%= ENV['GITHUB_CLIENT_ID'] %>" class="login_button">Log in with Github</a>
			</div>
		<% else %>
			<div class="logged_in">
				<h3>You're logged in!</h3>
				<p>Enter a username or full name to start your search</p>
				<%= form_tag search_path, method: "get" do %>
					<%= text_field_tag :q, params[:q] %>
					<%= submit_tag("Show Me") %>
				<% end %>
			</div>
		<% end %>

	</div>
</div>